<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<br />
<% Pokemon.where(trainer_id:@id).each do |pokemon| %>
	Pokemon: <%= pokemon.name %>
	Level: <%= pokemon.level %>
	Health: <%= pokemon.health %>
	<%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
	<br />
<% end %>
<% if @trainer.id == current_trainer.id %>
	<%= button_to "New Pokemon!", new_pokemon_path, :class => "button medium", :method => :patch %>
<% end %>


